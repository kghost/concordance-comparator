{
  "compilerOptions": {
    "outDir": "dist/esm",
    "target": "es2015",
    "lib": ["es2015", "es2016", "es2017", "es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "sourceMap": true,
    "importHelpers": true,
    "preserveConstEnums": true,
    "types": ["node"],
    "typeRoots": ["./typings", "./node_modules/@types"]
  },
  "exclude": ["dist", "test", "node_modules"]
}
